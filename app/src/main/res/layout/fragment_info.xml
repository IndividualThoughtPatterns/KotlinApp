<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:layout_gravity="right"
                android:src="@drawable/pokeball20"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pokemonInfoNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="33sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/pokemonIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp">
                <ImageView
                    android:id="@+id/avatarImageView"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center_horizontal"
                    android:elevation="3dp" />
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/aboutCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="225dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="70dp"
                        android:paddingRight="20dp">
                        <LinearLayout
                            android:id="@+id/typesLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal" />
                        <TextView
                            android:id="@+id/pokemonInfoTypesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal" />
                        <TextView
                            android:id="@+id/aboutLabelTextview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:text="About"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="5dp">
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/weight"/>
                                    <TextView
                                        android:id="@+id/pokemonInfoWeightTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"/>
                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="bottom"
                                    android:text="Weight"
                                    android:textSize="11sp"
                                    android:textColor="@color/gray"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/divider60"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="5dp">
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/straighten"/>
                                    <TextView
                                        android:id="@+id/pokemonInfoHeightTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"/>
                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="bottom"
                                    android:text="Height"
                                    android:textSize="11sp"
                                    android:textColor="@color/gray"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/divider60"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="5dp">
                                    <TextView
                                        android:id="@+id/pokemonInfoAbilitiesTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="start"
                                        android:lineSpacingExtra="5dp"/>
                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="bottom"
                                    android:textColor="@color/gray"
                                    android:textSize="11sp"
                                    android:text="Abilities" />
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/pokemonFlavor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/baseStatsLabelTextview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:text="Base Stats"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/baseStatsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginRight="15dp">
                                <TextView
                                    android:id="@+id/pokemonInfoHpLabel"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="right"
                                    android:text="HP"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:id="@+id/pokemonInfoAttackLabel"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="right"
                                    android:text="ATK"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/pokemonInfoDefenseLabel"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="right"
                                    android:text="DEF"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/pokemonInfoSpeedLabel"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="right"
                                    android:text="SPD"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="90dp"
                                android:src="@drawable/divider60"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp">
                                <TextView
                                    android:id="@+id/pokemonInfoHpTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"/>
                                <TextView
                                    android:id="@+id/pokemonInfoAttackTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"/>
                                <TextView
                                    android:id="@+id/pokemonInfoDefenseTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"/>
                                <TextView
                                    android:id="@+id/pokemonInfoSpeedTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
